<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir cleartext para domínios .onion -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">onion</domain>
    </domain-config>
    
    <!-- Permitir cleartext para todos os domínios .onion especificamente -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">*.onion</domain>
    </domain-config>
    
    <!-- Configuração para desenvolvimento - REMOVER EM PRODUÇÃO -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Para sites específicos que você precisa acessar via HTTP -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">aqqxvfk7lgweiidgasz4doevgqdssrghww26myiipfpuijgdyymh46ad.onion</domain>
        <domain includeSubdomains="true">duckduckgogg42ts72.onion</domain>
        <domain includeSubdomains="true">facebookcorewwwi.onion</domain>
    </domain-config>
</network-security-config>